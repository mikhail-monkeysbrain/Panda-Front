.side-menu
  max-width 404px
  width 100%
  // position fixed
  position absolute
  top 0
  left 0
  z-index 51

  background-color: #fefff8;
  box-shadow -5px 0px 20px 5px #bbb
  +below(1500px)
    max-width 280px
  +below(1200px)
    left -280px
    transition: .5s;
    &.opened
      left 0
      .side-menu__open
        span
          transform rotateY(180deg)

.side-menu__wrap
  padding-top 20px
  padding-bottom 40px
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction column
  min-height 100vh
  +below(1500px)
    padding-bottom 20px
  +below(767px)
    overflow-y auto
    height 100vh


.side-menu__logo
  display block
  text-decoration none
  text-align center
  margin-bottom 16px
  img
    max-width 316px
    width 100%
    +below(1500px)
      max-width 180px

.side-menu__nav
  li
    &:first-child
      a
        border-top: 1px solid #d2d2d3;
    a
      display block
      color: $text-grey;
      font-family $opsan
      font-size: 26px;
      padding-top 15px
      padding-bottom 15px
      padding-left 40px
      padding-right 30px
      font-weight: 400;
      text-decoration none
      letter-spacing: 1.52px;
      border-bottom: 1px solid #d2d2d3;
      +below(1500px)
        font-size 18px
        padding-top 8px
        padding-bottom 8px
        padding-left 20px
        padding-right 15px
      img
        float right
        +below(1500px)
          height 24px

.side-menu__contacts
  margin-top auto

.side-menu__tel
  text-align center
  margin-bottom 32px
  +below(1500px)
    margin-bottom 24px
  a
    display block
    text-decoration none
    color: $text-grey;
    font-size: 26px;
    font-weight: 400;
    letter-spacing: 1.52px;
    +below(1500px)
      font-size 18px
.side-menu__mail
  text-align center
  margin-bottom 32px
  +below(1500px)
    margin-bottom 24px
  a
    color: $text-grey;
    text-decoration none
    font-size: 26px;
    font-weight: 400;
    letter-spacing: 1.52px;
    +below(1500px)
      font-size 18px

.side-menu__social
  text-align center
  a
    display inline-block
    vertical-align middle
    margin 0 4px
    text-decoration none
  .ico
    height 25px
    max-width 32px

.side-menu__open
  position absolute
  left 100%
  top 50%
  transform translateY(-50%)
  background-color rgba(255, 255, 255, 0.5);
  border 1px solid #d2d2d3
  border-left 0
  padding 8px
  line-height 12px
  cursor pointer
  display none
  span
    display inline-block
    transition: .5s;
  +below(1200px)
    display block



// Top menu

.top-menu
  background-color: #fefff8;
  padding 20px 25px
  box-shadow 0px 1px 20px 0 #bbb
  position relative
  z-index 49
  +below(1500px)
    padding 15px 18px
  +below(767px)
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(255, 255, 255, 0.85);
    z-index -1
    opacity 0
    visibility hidden
    transition: .5s;
    &.show
      opacity 1
      visibility visible
      z-index 51


.top-menu__nav
  display -webkit-flex
  display -ms-flex
  display flex
  justify-content space-between
  align-items center
  +below(767px)
    flex-direction column
    height 100%
    justify-content space-around
  li
    text-align center
    &.is-active
      a
        font-weight bold
  a
    display block
    color: $text-grey;
    font-size: 26px;
    font-weight: 400;
    letter-spacing: 1.52px;
    text-decoration none
    white-space nowrap
    +below(1500px)
      font-size 18px
    +below(1200px)
      font-size 16px
    &.lk
      white-space normal
      font-size: 22px;
      font-weight: 400;
      text-decoration: underline;
      letter-spacing: 1.52px;
      +below(1500px)
        font-size 16px
  .ico
    +below(1500px)
      width 32px
