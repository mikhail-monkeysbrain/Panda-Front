.top-menu
  background-color: #fefff8;
  padding 20px 25px
  box-shadow 0px 1px 20px 0 #bbb
  position relative
  z-index 49
  +below(1500px)
    padding 15px 18px
  +below(767px)
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(255, 255, 255, 0.85);
    z-index -1
    opacity 0
    visibility hidden
    transition: .5s;
    &.show
      opacity 1
      visibility visible
      z-index 51


.top-menu__nav
  display -webkit-flex
  display -ms-flex
  display flex
  justify-content space-between
  align-items center
  +below(767px)
    flex-direction column
    height 100%
    justify-content space-around
  li
    text-align center
  a
    display block
    color: $text-grey;
    font-size: 26px;
    font-weight: 400;
    letter-spacing: 1.52px;
    text-decoration none
    white-space nowrap
    +below(1500px)
      font-size 18px
    +below(1200px)
      font-size 16px
    &.lk
      white-space normal
      font-size: 22px;
      font-weight: 400;
      text-decoration: underline;
      letter-spacing: 1.52px;
      +below(1500px)
        font-size 16px
  .ico
    +below(1500px)
      width 32px
