.main__home
  .section
    background-size cover
    background-repeat no-repeat
    background-color #e0dfdc
    background-position center
  .pageDown
  .pageUp
    position absolute
    width 165px
    height 165px
    border-radius: 50%;
    right 100px
    bottom 15px
    text-align center
    transition: .5s;
    cursor pointer
    &:hover
      .bg
        opacity 1
    .bg
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      border-radius: 50%;
      background-repeat no-repeat
      background-size cover
      z-index 1
      opacity 0
      transition: .5s;
    img
      position relative
      z-index 2
      padding-top 40px
  .pageUp
    transform: rotate(180deg);
    .bg
      transform: rotate(180deg);
