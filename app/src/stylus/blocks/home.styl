.main__home
  .section
    background-size cover
    background-repeat no-repeat
    background-color #e0dfdc
    background-position bottom
  .pageDown
  .pageUp
    position absolute
    width 165px
    height 165px
    border-radius: 50%;
    right 100px
    bottom 15px
    text-align center
    transition: .5s;
    cursor pointer
    &:hover
      .bg
        opacity 1
    .bg
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      border-radius: 50%;
      background-repeat no-repeat
      background-size cover
      z-index 1
      opacity 0
      transition: .5s;
    img
      position relative
      z-index 2
      padding-top 40px
  .pageUp
    transform: rotate(180deg);
    .bg
      transform: rotate(180deg);

.sofa-carousel
  .slide
    position relative


.sofa-carousel__img-block
  position relative
  width 100%
  margin-top 5vw
  .img-area
    position relative
    margin: 0 auto;
    padding 25px 0
    .owl-item
      padding-left calc(5vw + 50px)
    .info
      display none
    img
      maxvw(917)
      width 100%
  .angleBot
    position absolute
    bottom 0
    left 5vw
    width 110px
    height 60px
    border-left 4px solid $cv-orange
    border-bottom 4px solid $cv-orange
  .angleUp
    position absolute
    top 0
    left 987px
    left 51.40vw
    width 110px
    height 60px
    border-top 4px solid $cv-orange
    border-right 4px solid $cv-orange

.sofa-carousel__title-block
  padding-left 5vw

.sofa-carousel__type
  color: #080808;
  pxvw(102)
  font-weight: 400;
  letter-spacing: 1.52px;
.sofa-carousel__name
  color: #080808;
  pxvw(102)
  font-weight: 700;
  letter-spacing: 6.1px;
  sup
    position relative
    top -3.5vw
    color: #ffffff;
    pxvw(59)
    font-style: italic;
    letter-spacing: 1.52px;
.sofa-carousel__next
  max-width 288px
  max-width 13vw
  width 100%
  cursor pointer




.home-adv
  padding 0 4.14vw

.main-title
  color: #080808;
  pxvw(49)
  font-weight: 400;
  text-transform: uppercase;
  letter-spacing: 1.52px;
  &.bold
    font-weight bold
    letter-spacing: 6.1px;

.home-adv__list
  display -webkit-flex
  display -ms-flex
  display flex
  flex-wrap wrap
  justify-content space-between

.home-adv__item
  flex-basis 45%
  padding-right 13%
  margin-top 4vw
  .title
    padding-bottom 24px
    margin-bottom 24px
    position relative
    &:after
      content ''
      position absolute
      bottom 0
      left 0
      max-width 155px
      width 100%
      height 5px
      background $cv-orange
    .num
    .text
      display inline-block
      vertical-align middle
    .num
      width 95px
    .text
      color: #080808;
      font-size: 17px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 6.1px;
  .info
    color: #080808;
    font-size: 18px;
    font-weight: 400;
    letter-spacing: 3.6px;
